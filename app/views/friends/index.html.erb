<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
<h1>All Friends</h1>

<table class = "table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <%# <th>Last name</th> %>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Created</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <%# if(current_user.id == friend) %>
  
      <% @friends.each do |friend| %>
      
      <tr>
        <%# <%if(current_user.id === friend.user_id)%> 
          <td><%= link_to "#{friend.first_name} #{friend.last_name}", friend%></td>
         
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.user_id %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
          <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          
        <%# <%end%> 
      </tr>
    <% end %>
  </tbody>
</table>

<%else%>
<h1> Welcome to the HOME page </h1>
<%end%>
<br>

<%= link_to 'New Friend', new_friend_path, class: "btn btn-secondary" %>
