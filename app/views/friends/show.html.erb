<div class="jumbotron">
  <h1 class="display-4">
  <%= @friend.first_name %>
  <%= @friend.last_name %>
  </h1>
  <p class="lead"> email - 
    <%= @friend.email %> | phone no. - 
     <%= @friend.phone %> | twitter - 
     <%= @friend.twitter %>
  </p>
  <hr class="my-4">
  <br/><br/>
  <p class="lead">
    <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-secondary"%> 
    <%= link_to 'Back', friends_path, class: "btn btn-secondary" %>
    <%= link_to 'Destroy', friend_path, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
  
</div>



